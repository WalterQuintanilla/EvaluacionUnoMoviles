<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoEstudiante">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORMULARIO NUEVO ESTUDIANTE"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre::"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba su nombre"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo::"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba codigo Estudiante"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materia::"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escriba la materia"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primer Parcial"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtPrimerParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="30%"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segundo Parcial"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtSegundoParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="30%"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tercer Parcial"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:id="@+id/edtTercerParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="40%"
            android:layout_marginRight="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnGuardar"
            android:onClick="onClickGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"/>

     </LinearLayout>

</LinearLayout>